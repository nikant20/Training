	<form action="FormReaderServlet">
		Password: <input type="password" name="pass">
		<input type="submit" value="SubmitGet">
	</form>
	
	<h3>Form that send data through body</h3>
	<form action="FormReaderServlet" method="post">
		Password: <input type="password" name="pass">
		Select Skills <input type="checkbox" name="skills" value="C">C program
					  <input type="checkbox" name="skills" value="J">Java program
					  <input type="checkbox" name="skills" value="P">Python program<br><br>
		Select Gender <input type="radio" name="gender" value="Male">M					  
					  <input type="radio" name="gender" value="Female">F<br><br>	
		<input type="submit" value="SubmitPost">
	</form>

